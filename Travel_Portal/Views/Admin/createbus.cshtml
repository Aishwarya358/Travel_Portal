@model Entity_Model_Layer.Models.Bu

@{

    ViewData["Title"] = "Create";
    //Layout = "~/Views/Shared/_Layoutcreate.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <h1>Create</h1>

    <h4>Bu</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            @*<form asp-action="Create">*@
            @using (Html.BeginForm("createbus", "Admin", FormMethod.Post))
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="BusName" class="control-label"></label>
                    @*<input asp-for="BusName" class="form-control" />*@
                    @Html.TextBoxFor(m => m.BusName, new { @class = "form-control" })
                    <span asp-validation-for="BusName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TourId" class="control-label">TourName</label>
                    @*<select asp-for="TourId" class="form-control" asp-items="ViewBag.data"></select>*@
                    @*@Html.DropDownList("TourName", new SelectList(ViewBag.data, "TourId", "TourName"), new { @class = "form-control" })*@
                    @Html.DropDownListFor(m => m.TourId, new SelectList(ViewBag.data, "TourId", "TourName"), new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label asp-for="Ac" class="control-label"></label>
                    @*<input asp-for="Ac" class="form-control" />*@
                    @*@Html.TextBoxFor(m => m.Ac, new { @class = "form-control" })*@
                    @Html.DropDownListFor(m => m.Ac, new List<SelectListItem>
                   { new SelectListItem{Text="A/c", Value="A/c"},
                     new SelectListItem{Text="Non A/c", Value="Non A/c"} },
                     "---Select---", new { @class = "form-control" })
                    <span asp-validation-for="Ac" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TotalSeats" class="control-label"></label>
                    @*<input asp-for="TotalSeats" class="form-control" />*@
                    @Html.TextBoxFor(m => m.TotalSeats, new { @class = "form-control" })

                    <span asp-validation-for="TotalSeats" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fare" class="control-label"></label>
                    @*<input asp-for="Fare" class="form-control" />*@
                    @Html.TextBoxFor(m => m.Fare, new { @class = "form-control" })

                    <span asp-validation-for="Fare" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>*@
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
                @*</form>*@
            }
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    @if (Model != null)
    {
        <script type="text/javascript">
        $(function () {
            alert("Inserted Customer ID: " + @Model.BusName);
            });
        </script>
    }
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
