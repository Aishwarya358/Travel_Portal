@model Entity_Model_Layer.Models.Bu

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DemoLayout.cshtml";


}

<div class="row">
    <div class="col-md-4">
        @*<form asp-action="Edit">*@
        @using (Html.BeginForm("updatebus", "Admin", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BusId" />
            <div class="form-group">
                <label asp-for="BusName" class="control-label"></label>
                @Html.TextBoxFor(m => m.BusName, new { @class = "form-control" })
                <span asp-validation-for="BusName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TourId" class="control-label"></label>
                @*<select asp-for="TourId" class="form-control" asp-items="ViewBag.TourId"></select>*@
                @Html.DropDownListFor(m => m.TourId, new SelectList(ViewBag.data, "TourId", "TourName"), new { @class = "form-control" })

                <span asp-validation-for="TourId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Ac" class="control-label"></label>
                @Html.DropDownListFor(m => m.Ac, new List<SelectListItem>
              { new SelectListItem{Text="A/c", Value="A/c"},
                new SelectListItem{Text="Non A/c", Value="Non A/c"} },
                "---Select---", new { @class = "form-control" })
                <span asp-validation-for="Ac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalSeats" class="control-label"></label>
                @Html.TextBoxFor(m => m.TotalSeats, new { @class = "form-control" })
                <span asp-validation-for="TotalSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fare" class="control-label"></label>
                @Html.TextBoxFor(m => m.Fare, new { @class = "form-control" })
                <span asp-validation-for="Fare" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
            @*</form>*@
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

